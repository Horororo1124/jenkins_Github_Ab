pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Horororo1124/jenkins_Github_Ab.git'
                //Github  리포지토리의 코드를 jenkins 작업공간으로 가져오는 역할
                checkout scm
                //checkout sum = 현재 Jenkins 작업의 소스 코드를 가져옴,
            }
        }
        
        stage('Merge Files') {
            steps {
                // 파일 병합 스크립트 실행
                sh 'cat file1.txt file2.txt > merged.txt'
                
                // HTML 파일 읽기
                //html_content=$(cat index.html)
                
                // CSS 파일 읽기
                //css_content=$(cat styles.css)
                
                // HTML과 CSS 병합하여 merged.txt에 저장
                //echo "$html_content" > merged.txt
                //echo "$css_content" >> merged.txt
                
                
            }
        }
        
        /*stage('Notify') {
            steps {
                // 알림 전송 스크립트 실행 (예: 이메일, Slack, 등)
                // 알림 스크립트 작성 및 실행
            }
        }*/
    }
}
